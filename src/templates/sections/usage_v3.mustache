<section id="usage" class="content-section">
  {{#usage}}
  <div class="container">
    {{> ../partials/heading_main }}
    <div class="card-deck">
        {{#item}}
          <div class="card wow {{wow_class}}">

            <div class="overlay">
              <img class="card-img-top" src="../assets/img/{{image}}" alt="{{title}}" style="">
              <div class="mask-l"></div>
              <a href="#">
                <div class="mask rgba-white-slight"></div>
              </a>
            </div>
            <div class="usage-item-wrapper card-body text-center">
              <h4 class="h5 card-title">{{title}}</h4>
              <div class="usage-item-card">
                <!-- <div class="usage-icon">
                  <i class="fa {{icon}} fa-5x"></i>
                </div> -->

              </div>
              <div class="usage-description">
                <ul class="list-unstyled">
                  {{#usage_item}}
                    <li class="mb-3">
                      {{title}}
                    </li>
                  {{/usage_item}}
                </ul>
              </div>
            </div>
          </div>
        {{/item}}
    </div>
    <div class="row">
      <div class="col text-center">
        <a href="#universal-section" class="mt-5 btn btn-main-outline btn-fill-tr waves-effect waves-light scroll-to-element wow fadeInUp" data-wow-duration="2s" data-wow-delay="1.5s">
          {{button}}
        </a>

      </div>
    </div>

  </div>
  {{/usage}}
</section>
