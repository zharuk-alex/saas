<section id="usage" class="pt-5 pb-5 wow fadeIn parallax-window" data-parallax="scroll" data-image-src="img/backgrounds/chart-infographics-abstract_2.png">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2 class="h2 mt-5 white-text">ОБЛАСТИ ПРИМЕНЕНИЯ</h2>
      </div>
    </div>
    <div class="row">
      <!-- block -->
      {{#usage}}
        {{#item}}
      <div class="col-6 col-sm-6 col-lg-3 mb-4 white-text">
        <div class="usage-item-wrapper wow slideInUp">
          <div class="usage-title">
            <h4 class="h4 white-text my-4">{{title}}</h4>
          </div>
          <div class="usage-item-card mdb-color z-depth-2 p-2">
            <div class="usage-icon">
              <i class="fa {{icon}} fa-5x"></i>
            </div>
            <div class="usage-description">
              <ul class="list-unstyled">
                {{#usage_item}}
                <li class="my-2">
                  {{title}}
                  <ul>
                  {{#sub_usage_item}}
                    <li>{{sub_usage_item_title}}</li>
                  {{/sub_usage_item}}
                  </ul>
                </li>
                {{/usage_item}}
              </ul>
            </div>
          </div>
        </div>
      </div>
      {{/item}}
    {{/usage}}
    </div>
  </div>
</section>
