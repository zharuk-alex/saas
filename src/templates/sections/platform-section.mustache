<section id="platform-section" class="content-section">
  {{#platform}}
    <div class="container">
      {{> ../partials/heading_main }}
      <div class="row">
        <div class="col">
          <ul class="nav nav-tabs platform-tabs col-6 justify-content-between" role="tablist">
            <li class="nav-item">
              {{#web}}
              <a class="nav-link active" data-toggle="tab" href="#webblock" role="tab" aria-controls="webblock" aria-selected="true">{{title}}</a>
              {{/web}}
            </li>
            <li class="nav-item">
              {{#mobile}}
              <a class="nav-link"  data-toggle="tab" href="#androidblock" role="tab" aria-controls="androidblock" aria-selected="false">{{title}}</a>
              {{/mobile}}
            </li>
          </ul>
        </div>
      </div>
      <div class="tab-content platform-content">
        {{#web}}
          <div id="webblock" class="tab-pane fade show active" role="tabpanel" aria-labelledby="webblock-tab">
            {{> ../partials/platform-item }}
          </div>
        {{/web}}
        {{#mobile}}
          <div id="androidblock" class="tab-pane fade" role="tabpanel" aria-labelledby="androidblock-tab">
            {{> ../partials/platform-item }}
          </div>
        {{/mobile}}
      </div>


    <!-- button -->
      <div class="row">
      <div class="col text-center">
        <a class="popup-video btn btn-fill-tr mx-auto btn-main-outline waves-effect mt-4" href="http://www.youtube.com/watch?v=iUigshdj9aE">{{button_title}}</a>

      </div>
    </div>
    </div>
  {{/platform}}
</section>
