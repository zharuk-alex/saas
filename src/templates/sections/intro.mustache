<!-- Full Page Intro -->
<section id="intro" class="view full-page-intro">

  <!--Video source-->
  <video class="video-intro" autoplay loop>
    <source src="/video/charts.mp4" type="video/mp4" />
  </video>
  <!-- {{> ./democarousel }} -->

  <!-- Mask & flexbox options-->
  <div id="intro-mask" class="mask d-flex justify-content-center align-items-center">

    <!-- Content -->
    <div class="container">

      <!--Grid row-->
      <div class="row d-flex h-100 justify-content-center align-items-center wow fadeIn">

        <!--Grid column-->
        <div class="col-md-6 mb-4 white-text text-center text-md-left">
        {{#intro}}
          <h1 class="display-4 font-weight-bold">{{heading}}</h1>
          <hr class="hr-light">
          <p>
            <strong>{{description}}</strong>
          </p>
          <p class="mb-4 d-none d-md-block">
            <strong>{{sub_description}}</strong>
          </p>
          <a target="_blank" href="{{button_link}}" class="btn btn-demo m-0">{{button_title}}
            <i class="fa fa-sign-in ml-2"></i>
          </a>
        {{/intro}}
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 col-xl-5 mb-4">

          <img src="https://mdbootstrap.com/img/Mockups/Transparent/Small/admin-new.png" alt="" class="img-fluid">

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

    </div>
    <!-- Content -->

  </div>
  <!-- Mask & flexbox options-->

</section>
<!-- Full Page Intro -->
