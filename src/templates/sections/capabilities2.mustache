<section id="capabilities" class="pt-5 pb-5">
  <div class="container">
    <!--  -->
    <!-- Grid row -->
    <div class="row py-5 d-flex justify-content-center">

      <!-- Classic tabs -->
      <div class="classic-tabs">

        <!-- Nav tabs -->
        <ul class="nav" role="tablist">
          {{#capabilities}}
          <li class="nav-item">
            <a class="nav-link waves-light btn" data-toggle="tab" href="#cap{{id}}" role="tab">{{title}}</a>
          </li>
          {{/capabilities}}
        </ul>

        <div class="tab-content">
          {{#capabilities}}
          <div class="tab-pane fade in show card" id="cap{{id}}" role="tabpanel">
            <div class="card-body">
              <ul class="card-text list-unstyled">
                {{#list}}
                <li class="my-2">{{description}}</li>
                {{/list}}
              </ul>
            </div>
          </div>
          {{/capabilities}}
        </div>

      </div>
      <!-- Classic tabs -->

    </div>
    <!-- Grid row -->
    <!--  -->
  </div>
</section>
