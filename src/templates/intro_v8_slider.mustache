{{> ./partials/head }}

<body>
    {{> ./partials/navbar }}


  <section id="intro" class="view full-page-intro">

    <style media="screen">


      /* abstract-blue-background.jpg */
      #background-mask{
        background-image: url(../assets/img/intro_slider/abstract-blue-background.jpg);
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        filter: blur(5px) grayscale(20%) brightness(60%);
        height: 100%;
        width: 100%;
        position: absolute;
      }
      #carouselExampleControls .carousel-inner{
              border-radius: 4px;
        }

    </style>
    <div id="intro-mask" class="mask">
      <div id="background-mask">

      </div>
      <div class="container h-100">
        <div class="row view">

          <!--Grid column-->
          <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center">
            <div class="">
              <div id="introHeading">
                <img class="img-fluid" src="../assets/img/online_logo.png" alt="">
              </div>
              <div class="text-center white-text">
                <hr class="hr-light my-1">

                {{#intro}}
                <p class="sub-header ">
                    <strong>{{description}}</strong>
                  </p>
                  <p class="my-1 d-md-block sub-description text-lowercase text-white">
                    <strong>{{sub_description}}</strong>
                  </p>
                <a class="btn waves-effect waves-light btn-filled mx-0">{{button_title}}</a>
                {{/intro}}

              </div>
            </div>

          </div>
            <div class="col-12 col-md-6 d-flex flex-column align-items-center justify-content-center">
              <div id="video-container" class="wow fadeInRight animated">
                <!-- <video id="video" class="" autoplay loop muted>
                  <source src="../assets/video/charts.mp4" type="video/mp4" />
                </video> -->
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="../assets/img/intro_slider/1.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="../assets/img/intro_slider/2.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="../assets/img/intro_slider/3.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
                <!--  -->
              </div>
            </div>
          </div>
            <!-- macbook-hero -->
        </div>
        <div class="top-logo-holder">
          <div class="col-12 d-flex flex-row justify-content-between">
            {{#top_clients}}
            <img class="top_clients_logo img-fluid" src="../assets/img/header-logos_white/{{logo}}" alt="">
            {{/top_clients}}
          </div>
        </div>
        <div class="intro-scroll-to-element">
          <a href="#advantages" class="scroll-to-element">
            <svg class="icon icon-icons--down-arrow">
              <use xlink:href="../assets/img/sprite/sprite.svg#icons--down-arrow"></use>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
  {{> ./partials/footer2 }}
</body>

</html>
